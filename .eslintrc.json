{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "prettier",
    "airbnb-base"
  ],
  "plugins": [
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": 0,
    "no-console": 0,
    "comma-dangle": 0,
    "object-curly-newline": 0,
    "consistent-return": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "prettier/prettier": "error"
  }
}
