{
  "name": "simple-eshop",
  "version": "0.1.0",
  "description": "Training project",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client": "yarn --cwd client start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "lint": "eslint .",
    "lint:staged": "eslint --fix",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false yarn --cwd client install && yarn --cwd client build"
  },
  "author": "followthewhiterabbit",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "express-validator": "^6.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.13",
    "mongoose-morgan": "^1.0.12",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.2",
    "sharp": "^0.23.4"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn --cwd client test:ci"
    }
  },
  "lint-staged": {
    "!(client)/**/*.js": "yarn lint:staged",
    "./*.js": "yarn lint:staged",
    "client/**/*.(js|jsx)": "yarn --cwd client lint:staged",
    "client/src/**/styles.js": "yarn --cwd client lint:css:staged"
  }
}
